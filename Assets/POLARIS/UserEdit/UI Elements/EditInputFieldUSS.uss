#Title > Label {
    font-size: 1100%;
}

#UserInput > TextInput {
    background-color: rgba(0, 0, 0, 0);
    background-image: resource('Assets/POLARIS/Register/text box.png');
    border-width: 0;
    height: 80%;
}

#Confirm:active {
    -unity-background-image-tint-color: rgb(0, 63, 17);
    -unity-text-outline-width: 8px;
}

#ResetPassword:active {
    -unity-background-image-tint-color: rgb(0, 63, 17);
    -unity-text-outline-width: 8px;
}

#LogOut:active {
    -unity-background-image-tint-color: rgb(0, 63, 17);
    -unity-text-outline-width: 8px;
}

.unity-base-text-field__input {
    padding-left: 40px;
}

.userField {
    flex-grow: 0;
    flex-shrink: 0;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 20px;
    margin-left: 0;
}

.show-edit-UI {
    bottom: 0;
}

.hide-edit-UI {
    bottom: 120%;
}
